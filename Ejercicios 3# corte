Ejercicios 
try:
    num1 = float(input(" Digita el dividendo: "))
    num2 = float(input(" Digita el divisor: "))

    if num2 == 0:
        print("Error: No se puede dividir por cero.")
    else:
        resultado = num1 / num2
        print("El resultado de la división es:", resultado)
except ValueError:
    print("Error: Debes introducir números válidos.")
