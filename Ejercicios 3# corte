Ejercicios 
try:
    num1 = float(input(" Digita el dividendo: "))
    num2 = float(input(" Digita el divisor: "))

    if num2 == 0:
        print("Error: No se puede dividir por cero.")
    else:
        resultado = num1 / num2
        print("El resultado de la división es:", resultado)
except ValueError:
    print("Error: Debes introducir números válidos.")



frase = input("Please introduce una frase: ")
vocal = input("Please introduce una vocal: ").lower()

if vocal not in 'aeiou':
    print("Error: Debes introducir una vocal válida.")
else:
    frase_modificada = ""
    for char in frase:
        if char.lower() == vocal:
            frase_modificada += vocal.upper()
        else:
            frase_modificada += char
    print("La frase modificada es:", frase_modificada)
